@model Online_Shopping_Model.ViewModel.ProductViewModel

<h1 class="text-info"></h1>
<form method="get" enctype="multipart/form-data">
	<div class="p-4 rounded border row">
		<div asp-validation-summary="ModelOnly" class="text-danger">
		</div>
		<div class="col-8">
			<div class="form-group row mb-2">
				<label class="col-sm-4 col-form-label">Product Id</label>
				<div class="col-sm-8">
					<input asp-for="ProductId" name="ProductId" id="ProductId" type="text" class="form-control" disabled="disabled" />
				</div>
			</div>

			<div class="form-group row mb-2">
				<label class="col-sm-4 col-form-label">Product Id</label>
				<div class="col-sm-8">
					<input asp-for="CategoryId" name="CategoryId" id="CategoryId" type="text" class="form-control" disabled="disabled" />
				</div>
			</div>

			<div class="form-group row mb-2">
				<label class="col-sm-4 col-form-label">Product Id</label>
				<div class="col-sm-8">
					<input asp-for="ProductName" name="ProductName" id="ProductName" type="text" class="form-control" disabled="disabled" />
				</div>
			</div>

			<div class="form-group row mb-2">
				<label class="col-sm-4 col-form-label">Product Id</label>
				<div class="col-sm-8">
					<input asp-for="Price" name="Price" id="Price" type="text" class="form-control" disabled="disabled" />
				</div>
			</div>

			<div class="form-group row mb-2">
				<div class="col-4">
					<label></label>
				</div>
				<div class="col-8">
					@if(Model.ProductId == 0)
					{
						<button type="submit" class="btn btn-danger form-control">Remov To Cart</button>
					}
					else
					{
						<input type="submit" class="btn btn-success form-control" value="Add To Cart" />
					}
				</div>
			</div>
			<div class="form-group mt-2">
				<a class="btn btn-primary">Edit</a>
				<a class="btn btn-success">Edit</a>
			</div>
		</div>
		<div class="col-1">
		</div>
		<div class="col-3">
			<img src="/Images/Products/@Model.Photo" style="width:100%;height:250px;border-radius:5px;border:1px #efefef" />
		</div>
	</div>
</form>

<link href="~/css/productpagestyle.css" rel="stylesheet" />