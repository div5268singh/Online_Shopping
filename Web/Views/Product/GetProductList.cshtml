@model Online_Shopping_Model.ViewModel.ProductImageViewModel



<div>
    <button class="btn btn-primary m-2" id="btnAddProduct">Add Product</button>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr class="text-center">
                        <th>ProductId</th>
                        <th>CategoryId</th>
                        <th>ProductName</th>
                        <th>Photo</th>
                        <th>Price</th>
                        <th colspan="3">Action</th>
                    </tr>
                </thead>
                <tbody class="text-center" id="table_data"></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade modal" id="ProductModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Add Product</h1>
                <button class="close btn-danger" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post" id="myForm">
                    <div class="form-group">
                        <label>Product Id</label>
                        <input type="text" class="form-control" name="ProductId" id="ProductId" disabled="disabled" />
                    </div>

                    <div class="form-group">
                        <label>Category Id</label>
                        <input type="text" placeholder="Enter Category Id" class="form-control" name="CategoryId" id="CategoryId" required="required" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label>Product Name</label>
                        <input type="text" placeholder="Enter Product Name" class="form-control" name="ProductName" id="ProductName" required="required" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label>Photo Path</label>
                        <input type="file" placeholder="Upload Image" class="form-control" name="PhotoPath" id="PhotoPath" required="required" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label>Price</label>
                        <input type="text" placeholder="Enter Price" class="form-control" name="Price" id="Price" required="required" autocomplete="off" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                @*<button class="btn btn-success" onclick="AddProduct();" id="AddProduct">Save</button>
                <button class="btn btn-warning" onclick="UpdateProduct();" style="display:none" id="btnUpdate">Update</button>*@
                <button class="btn btn-success" id="AddProduct">Save</button>
                <button class="btn btn-warning" id="UpdateProduct" style="display:none">Update</button>
                <button class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>






<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert2@7.8.2/dist/sweetalert2.all.js"></script>
<script src="~/js/Product_File.js"></script>