@model Online_Shopping_Model.ViewModel.CustomerImageViewModel

<div class="container">
	<div class="row">
		<div class="col-4 offset-4">
			<form asp-action="AddCustomer" asp-controller="Customer" method="post" enctype="multipart/form-data">

				<div class="form-group">
					<label>Role Id</label>
					<input class=form-control type="text" asp-for="RoleId" required="required" />
				</div>

				<div class="form-group">
					<label>CustomerName</label>
					<input class=form-control type="text" asp-for="CustomerName" required="required" />
				</div>

				<div class="form-group">
					<label>Phone</label>
					<input class=form-control type="text" asp-for="Phone" required="required" />
				</div>

				<div class="form-group">
					<label>Address</label>
					<input class=form-control type="text" asp-for="Address" required="required" />
				</div>

				<div class="form-group">
					<label>City</label>
					<input class=form-control type="text" asp-for="City" required="required" />
				</div>

				<div class="form-group">
					<label>PostalCode</label>
					<input class=form-control type="text" asp-for="PostalCode" required="required" />
				</div>

				<div class="form-group">
					<label>Contry</label>
					<input class=form-control type="text" asp-for="Country" required="required" />
				</div>

				<div class="form-group">
					<label>Phone</label>
					<input class=form-control type="text" asp-for="Phone" required="required" />
				</div>

				<div class="form-group">
					<label>Photo</label>
					<input class=form-control type="file" asp-for="PhotoPath" required="required" />
				</div>

				<div class="form-group">
					<label>Email</label>
					<input class=form-control type="text" asp-for="Email" required="required" />
				</div>

				<div class="form-group">
					<label>Password</label>
					<input class=form-control type="text" asp-for="Password" required="required" />
				</div>

				<button class="btn btn-primary" asp-action="AddCustomer" asp-controller="Customer" type="submit">Submit</button>

			</form>
			<h2>@ViewBag.massage</h2>
		</div>
	</div>
</div>